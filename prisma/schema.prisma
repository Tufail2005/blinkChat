
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id String @id @default(uuid())
  userName String @unique
  email String? @unique
  password String 
}

model Room {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
  radius    Float    @default(50.0) // Radius in meters
  createdAt DateTime @default(now())
}